<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <ImageView
            android:id="@+id/iv_kind"
            android:src="@drawable/label_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_kind"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="分类 "
            android:textColor="#77000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_top_comment"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="#05000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_comment_head"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_comment_icon"
                android:src="@drawable/user"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_comment_name"
                android:text="zoo"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView

            android:layout_below="@id/ll_comment_head"
            android:id="@+id/tv_comment_content"
            android:layout_marginTop="10dp"
            android:text="楼主nb"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/ll_comment_zan"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_comment_zan"
                android:text="1.4万"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="3dp"
                android:id="@+id/iv_comment_zan"
                android:src="@drawable/zan"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <ImageView
            android:layout_toLeftOf="@id/ll_comment_zan"
            android:src="@drawable/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_ding"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_ding"
                android:src="@drawable/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_ding_number"
                android:text="赞"
                android:layout_marginLeft="3dp"
                android:textColor="#88000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/ll_cai"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_cai"
                android:src="@drawable/cai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_cai_number"
                android:text="踩"
                android:layout_marginLeft="3dp"
                android:textColor="#88000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/ll_chart"
            android:orientation="horizontal"
            android:clickable="true"
            android:gravity="center_vertical"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_chart"
                android:src="@drawable/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_chart_number"
                android:text="评论"
                android:layout_marginLeft="3dp"
                android:textColor="#88000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/ll_share"
            android:orientation="horizontal"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_share"
                android:src="@drawable/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_share_number"
                android:text="分享"
                android:layout_marginLeft="3dp"
                android:textColor="#88000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>





    </LinearLayout>

</LinearLayout>